@model Product

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        @*Spotted diff - 'asp-validation-summary' tag is new in asp.net core *@
        @* <div asp-validation-summary="All"></div> *@
        <div class="mb-3 row p-1">
            @*Spotted diff - 'asp-for' tag is new in asp.net core *@
            <label asp-for=Title class="p-0"></label>
            <input asp-for=Title type="text" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for=Description disabled class="p-0"></label>
            <textarea asp-for=Description type="text" disabled class="form-control"></textarea>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for=ISBN disabled class="p-0"></label>
            <input asp-for=ISBN type="text" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for=Author disabled class="p-0"></label>
            <input asp-for=Author type="text" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for=ListPrice disabled class="p-0"></label>
            <input asp-for=ListPrice type="text" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for=Price disabled class="p-0"></label>
            <input asp-for=Price type="text" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for=Price50 disabled class="p-0"></label>
            <input asp-for=Price50 type="text" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for=Price100 disabled class="p-0"></label>
            <input asp-for=Price100 type="text" class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">Back to List</a>
            </div>
        </div>
    </div>
</form>
